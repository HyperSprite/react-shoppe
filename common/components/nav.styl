.nav {
  min-height: 20%;
  padding-top: 10px;
  padding-left: 20px;
  padding-right: 20px;
  border-bottom: 1px solid blue;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: center;
  clearfix();
}

.nav-logo
  img
    height: 50px
    min-width: 100%
    margin-top: 10px
    +below(800px)
      height 100%
      width 100%

.nav-list
  align-self flex-end
  list-style-type none
  margin -50px 0 0 0
  padding 20px
  li
    display inline
    padding 30px
    color blue
    &:hover
      color purple-dark

.nav-list-named {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  li {
    flex: 1 25%;
  }
}

.nav-list-user-name {
  flex: 1 50%;
}

.nav-list-login
  a
    color blue
    text-decoration none
    &:hover
      color purple-dark

.nav-list-sign-up
  a
    color blue
    text-decoration none
    &:hover
      color purple-dark
